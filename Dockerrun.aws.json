{
    "AWSEBDockerrunversion": 2,
    "containerDefinitions": [
        {
            "name": "frontend",
            "image": "parthsujalshah/startertemplate-frontend",
            "hostname": "frontend",
            "essential": false
        },
        {
            "name": "backend",
            "image": "parthsujalshah/startertemplate-backend",
            "hostname": "backend",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "parthsujalshah/startertemplate-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 8080
                }
            ],
            "links": ["backend"]
        }
    ]
}